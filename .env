# Database
POSTGRES_USER=manga_user
POSTGRES_PASSWORD=manga_password
POSTGRES_DB=manga_db

# Backend
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Frontend
NEXT_PUBLIC_API_URL=/api

# Setup Mode - First Admin User (optional, only used on first startup)
# If set, the first user will be created as admin when database is empty
SETUP_ADMIN_USERNAME=admin
SETUP_ADMIN_EMAIL=admin@example.com
SETUP_ADMIN_PASSWORD=changeme

# CORS - Set to "*" for any, or comma-separated list of allowed origins
# Example: "http://localhost,http://192.168.1.100"
CORS_ORIGINS=*
